<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="1dp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingStart="@dimen/_10ssp"
            android:paddingEnd="@dimen/_10ssp"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Tittle"
                    android:id="@+id/offer_title"
                    android:textStyle="bold"
                    android:textSize="@dimen/_13sdp"
                    android:layout_toLeftOf="@+id/redeem_btn"
                    android:textColor="@color/black_new"
                    android:fontFamily="@font/titillium_regular"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_height="wrap_content"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/redeem_btn"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:fontFamily="@font/titillium_regular"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/button_shape"
                    android:text="Redeem"
                    android:layout_alignParentEnd="true"
                    android:textAllCaps="false"
                    android:textColor="@color/white_color"
                    android:textSize="@dimen/_10ssp"
                    android:textStyle="normal"
                    android:visibility="visible"
                    app:backgroundTint="@color/colorPrimaryDark"
                    app:cornerRadius="3dp"
                    app:rippleColor="@color/ligrey"
                    app:strokeColor="@color/colorPrimary"
                    app:strokeWidth="1dp" />



            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/offer_des"
                android:fontFamily="@font/titillium_regular"
                android:textSize="@dimen/_10ssp"
                android:text="kasjdlk s;d;sld a;sl;aslkd l;sk;als ;lask;lsakd"
                android:layout_height="wrap_content"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginBottom="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Tittle"
                    android:id="@+id/offer_price"
                    android:textSize="@dimen/_11sdp"
                    android:fontFamily="@font/titillium_regular"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:text="valid till 30 sep"
                    android:id="@+id/offer_valid"
                    android:textSize="@dimen/_11sdp"
                    android:fontFamily="@font/titillium_regular"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_height="wrap_content"/>



            </RelativeLayout>

        </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.cardview.widget.CardView>

</androidx.appcompat.widget.LinearLayoutCompat>